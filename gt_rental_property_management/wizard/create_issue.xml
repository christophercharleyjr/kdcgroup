<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_wizard_create_issue" model="ir.ui.view">
            <field name="name">Create Issue</field>
            <field name="model">create.issue</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create Issue">
                    <sheet>
                        <Separator string="This wizard will allow to Create issue."/>
                        <footer>
                            <button name="create_issue" string="Create Issue" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-default" special="cancel" />
                        </footer>
                        <group col="4">
                            <field name="issue_summary"/>
                            <field name="image"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_create_issue" model="ir.actions.act_window">
            <field name="name">Create Issue</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.issue</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>