<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_account_payment_form_inherited_for_entry" model="ir.ui.view">
            <field name="name">account.payment.form.inherited</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <!-- <xpath  expr="//button[@name='action_post']" position="replace">
                     <button name="post" class="oe_highlight" states="draft" string="Confirm" type="object" groups="base.group_system,gt_rental_property_management.group_agent"/>
                </xpath> -->

                <field name="ref" position="attributes">
                    <attribute name="readonly">True</attribute>
                </field>
                <field name="ref" position="after">
                    <field name="agent_id"/>
                    <field name="landlord_id"/>
                    <field name="property_id"/>
                </field>
                <field name="journal_id" position="after">
                    <field name="rent" attrs="{'invisible': [('partner_type', '=', 'customer')]}"/>
                    <!--<field name="agent_commission" attrs="{'invisible': [('partner_type', '=', 'customer')]}"/>-->
                    <!--<field name="issue_deduction" attrs="{'invisible': [('partner_type', '=', 'customer')]}"/>-->
                </field>
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page name="payment_history" string="Payment History" attrs="{'invisible': [('partner_type', '=', 'customer')]}">
                            <field name="issue_payment_ids" readonly="1">
                                <tree>
                                    <field name="description"/>
                                    <field name="amount" sum="Total"/>
                                    <field name="issue_payment_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>


        <record id="view_account_invoice_form_inherited_for_entry" model="ir.ui.view">
            <field name="name">account.invoice.form.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <!--<field name="name" position="attributes">-->
                <!--<attribute name="readonly">True</attribute>-->
                <!--</field>-->
                <field name="partner_id" position="after">
                    <field name="landlord_id" invisible="0"/>
                    <field name="property_id" invisible="0"/>
                </field>
<!--                 <xpath expr="//page[@name='other_info']/group/group/field[@name='name']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath> -->
            </field>
        </record>


         <record id="view_account_invoice_form_inherited_for_supplier" model="ir.ui.view">
            <field name="name">account.invoice.form.inherited.supplier</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                 <xpath  expr="//button[@name='action_post']" position="replace">
                    <button name="action_post" type="object" states="draft" string="Validate" class="oe_highlight" groups="base.group_system,gt_rental_property_management.group_agent"/>
                </xpath>
                 <button name="action_register_payment" position="attributes">
                    <attribute name="groups">base.group_system,gt_rental_property_management.group_agent</attribute>
                </button>
                <button name="action_reverse" position="attributes">
                    <attribute name="groups">base.group_system,gt_rental_property_management.group_agent</attribute>
                </button>     
                               
            </field>
        </record>

         <record id="view_account_invoice_form_inherited_for_credit_note" model="ir.ui.view">
            <field name="name">account.invoice.forcredit.note</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <button name="action_register_payment" position="attributes">
                    <attribute name="groups">base.group_system,gt_rental_property_management.group_agent</attribute>
                </button>  
                <button name="action_post" position="attributes">
                    <attribute name="groups">base.group_system,gt_rental_property_management.group_agent</attribute>
                </button>  
            </field>
        </record>


        <record id="view_account_payment_invoice_form_inherited" model="ir.ui.view">
            <field name="name">account.payment.invoice.form.inherited</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <field name="ref" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>

    </data>
</odoo>